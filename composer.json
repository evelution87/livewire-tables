{
  "name": "evelution/livewire-tables",
  "description": "Live tables in Livewire",
  "keywords": [
    "evelution",
    "livewire-tables"
  ],
  "homepage": "https://github.com/evelution/livewire-tables",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Craig Eve",
      "email": "craig@evelution.net",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "ext-json": "*",
    "illuminate/support": "^8.0",
    "livewire/livewire": "^2.4",
    "tailwindlabs/heroicons": "^v1.0.0"
  },
  "require-dev": {
    "orchestra/testbench": "^6.0",
    "phpunit/phpunit": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Evelution\\LivewireTables\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Evelution\\LivewireTables\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "tailwindlabs/heroicons",
        "version": "v1.0.0",
        "type": "package",
        "source": {
          "url": "https://github.com/tailwindlabs/heroicons.git",
          "type": "git",
          "reference": "v1.0.0"
        }
      }
    }
  ],
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Evelution\\LivewireTables\\LivewireTablesServiceProvider"
      ],
      "aliases": {
        "LivewireTables": "Evelution\\LivewireTables\\LivewireTablesFacade"
      }
    }
  },
  "minimum-stability": "dev"
}
